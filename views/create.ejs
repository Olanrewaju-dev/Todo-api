<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
  </head>
  <body>
    <header class="container">
      <nav class="navbar navbar-expand-custom navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/views/todo/">Yásè</a>
          <ul class="nav">
            <li class="nav-item d-none">
              <a class="nav-link" href="/views/login">Login</a>
            </li>
            <% if(user) {%>
            <li class="nav-item">
              <a class="nav-link" href="/views/logout">Logout</a>
            </li>
            <% } %>
          </ul>
        </div>
      </nav>
    </header>

    <main class="container">
      <form
        action="/views/todo/create"
        method="POST"
        class="mt-5 mb-5 mx-auto w-80"
      >
        <div>
          <label for="title" class="form-label">Task title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            placeholder="Enter task title"
            name="title"
          />
        </div>
        <div class="mt-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="3"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-success mt-3">Save task</button>
      </form>
    </main>
    <footer><%- include("partials/footer.ejs") %></footer>
  </body>
</html>
